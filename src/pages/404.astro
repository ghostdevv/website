---
import Global from '$lib/layouts/Global.astro';
import cat404 from '$assets/http-cat/404.png';
import { Image } from 'astro:assets';
---

<Global>
	<main>
		<Image src={cat404} alt="HTTP Cat 404" height={500} />
		<a href="/">&lt; Go Home</a>
	</main>
</Global>

<style lang="scss">
	main {
		height: 100vh;
		width: 100%;

		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 8px;

		width: 80%;
		margin: 0 auto;
	}
</style>
