---
import { faDiscord, faGithub } from '@fortawesome/free-brands-svg-icons';
import { faMastodon } from '@fortawesome/free-brands-svg-icons';
import { faTwitter } from '@fortawesome/free-brands-svg-icons';
import Posts from '$lib/components/posts/Posts.astro';
import Page from '$lib/layouts/Page.astro';
import Fa from 'svelte-fa';
import { HALLOWEEN } from '$lib/vars';
---

<Page>
    <section class="column g16">
        <h1>
            ðŸ‘‹{HALLOWEEN ? 'ðŸŽƒ' : ''} Hey, I'm Willow
            <span class="aka">(aka GHOST)</span>
