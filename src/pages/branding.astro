---
import ColourGroup from '$lib/components/branding/ColourGroup.astro';
import inlineFavicon from '$lib/components/branding/inlineFavicon';
import CopyableInput from '$lib/components/CopyableInput.svelte';
import { faDownload } from '@fortawesome/free-solid-svg-icons';
import LogoRainbow from '$lib/components/LogoRainbow.svelte';
import Logo from '$lib/components/branding/Logo.svelte';
import RegularLogo from '$lib/components/Logo.svelte';
import Page from '$lib/layouts/Page.astro';
import { colours } from '$data/colours';
import Fa from 'svelte-fa';

function getLogos(type: 'main' | 'rainbow') {
	// prettier-ignore
	return [
        { name: 'SVG', url: `/logos/${type}/ghost-logo-${type}.svg` },
        { name: 'WEBP 500x', url: `/logos/${type}/ghost-logo-${type}.webp` },
        { name: 'PNG 500x', url: `/logos/${type}/ghost-logo-${type}-500.png` },
        { name: 'PNG 1000x', url: `/logos/${type}/ghost-logo-${type}-1000.png` },
        { name: 'PNG Padded 500x', url: `/logos/${type}/ghost-logo-${type}-padded.png` },
    ];
}
---

<Page>
	<section class="col">
		<h1>Branding</h1>
		<p>ðŸ˜± You found my secret branding page!</p>
	</section>

	<section class="col">
		<h2>Colours</h2>
		<hr />

		<div class="colours">
			{colours.map((group) => <ColourGroup group={group} />)}
		</div>
	</section>

	<section class="col">
		<h2>Logos</h2>
		<hr />

		<div class="logos">
			<Logo name="Main" formats={getLogos('main')}>
				<RegularLogo />
			</Logo>

			<Logo name="Rainbow" formats={getLogos('rainbow')}>
				<LogoRainbow />
			</Logo>
		</div>
	</section>

	<section class="col">
		<h2>Favicon</h2>
		<hr />

		<a href="/favicon.png" target="_blank" download>
			<Fa icon={faDownload} /> favicon.png
		</a>

		<h3 style="margin-top: 12px;">Inline Code</h3>
		<CopyableInput client:load value={inlineFavicon} />
	</section>
</Page>

<style lang="scss">
	.colours {
		display: flex;
		flex-direction: column;
		gap: 22px;
	}

	.logos {
		display: flex;
		gap: 64px;
	}

	section {
		margin: 64px auto;
	}
</style>
